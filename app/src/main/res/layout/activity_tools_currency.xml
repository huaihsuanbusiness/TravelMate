<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currency_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beach"
    android:orientation="vertical"
    tools:context=".Tools_Currency"
    tools:layout_editor_absoluteY="25dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/semitrans_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <AutoCompleteTextView
                android:id="@+id/er_suggestion_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"

                android:layout_margin="8dp"
                android:layout_weight="5"
                android:hint="Search Currency"
                android:textColorHint="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </AutoCompleteTextView>

            <Spinner
                android:id="@+id/spinner_currencytype"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="8dp"
                android:backgroundTint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="133dp"
                />

        </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#8C272727">


        <LinearLayout
            android:id="@+id/currency_ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/currency_cal_one"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Currency"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="459dp"
            />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/currency_input_one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_weight="8"
                android:layout_margin="8dp"
                android:hint="hint"

                android:backgroundTint="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:inputType="number" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#8C272727">

        <LinearLayout
            android:id="@+id/currency_ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="TWD"
            android:textAlignment="center"

            android:textSize="18dp"
            android:textColor="@color/colorWhite"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="231dp"
            tools:layout_editor_absoluteY="298dp" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/currency_input_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_weight="8"
                android:layout_margin="8dp"
                android:backgroundTint="@color/colorWhite"
                android:hint="hint"
                android:textColorHint="@color/colorWhite"
                android:inputType="number" />

       </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#B3272727">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_margin="8dp"
            android:weightSum="10">
            <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="5"
              android:text="Currency"
              android:textColor="@color/colorWhite"
              android:textSize="18sp" />
            <TextView
                android:id="@+id/currency_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textAlignment="textEnd"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_margin="8dp"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Rate"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/currency_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textAlignment="textEnd"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_margin="8dp"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Inverse Rate"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/currency_inverse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textAlignment="textEnd"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Update Time"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/currency_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textAlignment="textEnd"/>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
<android.support.design.widget.FloatingActionButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:onClick="onclick_sharecurrency"
    android:src="@drawable/ic_share_black_24dp"
    app:backgroundTint="@color/semitrans_background"/>


</LinearLayout>