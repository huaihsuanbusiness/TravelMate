<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/noti_carditem"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    cardview:cardCornerRadius="5dp"
    card_view:cardElevation="10"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/noti_text_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/card_text_one"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlueJeansDark"
            />
        <TextView
            android:id="@+id/noti_text_subject"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:textSize="18sp"
            android:text="@string/card_text_one"
            android:background="@color/colorWhite"/>
        <TextView
            android:id="@+id/noti_text_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:textSize="18sp"
            android:text="@string/card_text_one"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
