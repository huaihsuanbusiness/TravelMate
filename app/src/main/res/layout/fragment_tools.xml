<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/beach"
    android:id="@+id/layout_tools"
    tools:context=".MainPage.FragmentTools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardElevation="5dp"
    cardview:cardCornerRadius="5dp"
    android:layout_centerHorizontal="true"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/travelvectorjpg"
        android:gravity="bottom"
        android:scaleType="fitStart">

    </ImageView>
</android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:weightSum="3"
                android:layout_marginTop="2dp"

                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="7dp"
                    cardview:cardCornerRadius="7dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    >
                <LinearLayout
                    android:id="@+id/id_text_taipeiwifi"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorGrapeFruit"
                    android:clickable="true"
                    >



                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_wifi_black_24dp"
                        android:clickable="false"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorGrapeFruitDark"
                        android:text="@string/tools_text_wifi"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:layout_gravity="end"
                        android:clickable="false"
                        />

                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="7dp"
                    cardview:cardCornerRadius="7dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    >
                <LinearLayout
                    android:id="@+id/id_text_currency"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorFlower">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_local_atm_black_24dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:background="@color/colorFlowerDark"
                        android:text="@string/tools_text_currency"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:layout_gravity="end"
                        />

                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="7dp"
                    cardview:cardCornerRadius="7dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    >
                <LinearLayout
                    android:id="@+id/id_text_tra"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorGrass">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_directions_railway_black_24dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorGrassDark"
                        android:text="@string/tools_text_railway"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:layout_gravity="end"
                        />

                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:weightSum="3"
                android:layout_marginTop="2dp"

                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="7dp"
                    cardview:cardCornerRadius="7dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    >
                <LinearLayout
                    android:id="@+id/id_text_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:background="@color/colorAqua"
                    android:clickable="true"
                    android:focusable="true">



                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_shopping_cart_black_24dp"
                        android:clickable="false"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorAquaDark"
                        android:text="@string/tools_text_purchase"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:layout_gravity="end"
                        android:clickable="false"
                        />

                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="7dp"
                    cardview:cardCornerRadius="7dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    >
                <LinearLayout
                    android:id="@+id/id_text_database"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorBlueJeans">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_outline_subway_24px" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:background="@color/colorBlueJeansDark"
                        android:text="測試區"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:layout_gravity="end"
                        />

                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    cardview:cardElevation="7dp"
                    cardview:cardCornerRadius="7dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    >
                <LinearLayout
                    android:id="@+id/id_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorLavander">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_account_box_black_24dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorLavanderDark"
                        android:text="@string/tools_text_Auth"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:layout_gravity="end"
                        />

                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>



</LinearLayout>